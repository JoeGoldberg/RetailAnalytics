{
    "Defaults" : {
        "Application" : "RetailAnalyticsApp",
        "SubApplication" : "RetailAnalyticsSubApp",
        "RunAs" : "ec2-user",
        "Host" : "engagelinux"
    },

    "RetailAnalyticsFlow": {
        "Type": "Folder",
        "Comment" : "Code reviewed by John Smith",

        "CommandJob": {
            "Type": "Job:Command",
            "Command": "java -classpath /var/lib/jenkins/RetailAnalytics.jar RetailAnalytics | sudo wall -n"
        },
		"Notification" : {
       		"Type": "If",       
 	        "CompletionStatus": "NOTOK",             
    		"mailToTeam": {
            	"Type": "Mail",
                "Message": "%%JOBNAME failed",
                "To": "team@mycomp.com"
          	}
 		}
    }
}
